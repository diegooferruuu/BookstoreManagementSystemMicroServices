@page
@model LibraryWeb.Pages.Clients.IndexModel
@{
    ViewData["Title"] = "Clientes";
    int startNumber = (Model.Page - 1) * Model.PageSize;
}

<div class="card shadow-custom">
    <div class="card-header card-header-blue d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h5 class="mb-0 text-white"><i class="fas fa-users me-2"></i>Clientes</h5>
        <div class="d-flex align-items-center gap-2">
            <form method="get" class="d-flex align-items-center gap-2">
                <label class="form-label mb-0 small text-white">Mostrar</label>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 70px;">
                        @Model.PageSize
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                        @foreach (var size in new[] { 10, 20, 50, 100 })
                        {
                            <li>
                                <button type="submit" name="pageSize" value="@size" class="dropdown-item @(Model.PageSize == size ? "active" : "")">
                                    @size registros
                                </button>
                            </li>
                        }
                    </ul>
                </div>
                <input type="hidden" name="pageNumber" value="1" />
            </form>
            <a asp-page="Create" class="btn btn-primary btn-sm"><i class="fas fa-user-plus me-1"></i>Añadir Cliente</a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th class="th-blue">N°</th>
                        <th class="th-blue">Nombre completo</th>
                        <th class="th-blue">Correo electrónico</th>
                        <th class="th-blue">Teléfono</th>
                        <th class="th-blue">Dirección</th>
                        <th class="th-blue text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    int i = 0;
                }
                @foreach (var client in Model.Clients)
                {
                    <tr>
                        <td>@(startNumber + (++i))</td>
                        <td>@client.LastName @client.FirstName</td>
                        <td>@client.Email</td>
                        <td>@client.Phone</td>
                        <td>@client.Address</td>
                        <td class="text-center table-actions">
                            <form method="post" asp-page-handler="Edit" class="d-inline">
                                <input type="hidden" name="id" value="@client.Id" />
                                <button class="btn btn-warning btn-sm btn-icon" type="submit" title="Editar"><i class="fas fa-edit"></i> Editar</button>
                            </form>
                            <button type="button" class="btn btn-danger btn-sm btn-icon ms-1" title="Eliminar" data-bs-toggle="modal" data-bs-target="#confirmDeleteClientModal" data-client-id="@client.Id">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        @if (!Model.Clients.Any())
        {
            <div class="alert alert-info mb-0">No tienes clientes registrados.</div>
        }

        @if (Model.TotalPages > 1)
        {
            <nav class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted small">
                    Página @Model.Page de @Model.TotalPages
                </div>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link rounded-start-pill" asp-page="Index" asp-route-pageNumber="1" asp-route-pageSize="@Model.PageSize" title="Primera">
                            <i class="fas fa-angles-left"></i>
                        </a>
                    </li>
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.Page - 1)" asp-route-pageSize="@Model.PageSize" title="Anterior">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>
                    @{
                        int start = Math.Max(1, Model.Page - 2);
                        int end = Math.Min(Model.TotalPages, Model.Page + 2);
                        if (start > 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }
                    @for (int p = start; p <= end; p++)
                    {
                        <li class="page-item @(p == Model.Page ? "active" : "")">
                            <a class="page-link" asp-page="Index" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                        </li>
                    }
                    @if (end < Model.TotalPages)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.Page + 1)" asp-route-pageSize="@Model.PageSize" title="Siguiente">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link rounded-end-pill" asp-page="Index" asp-route-pageNumber="@Model.TotalPages" asp-route-pageSize="@Model.PageSize" title="Última">
                            <i class="fas fa-angles-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<div class="modal fade" id="confirmDeleteClientModal" tabindex="-1" aria-labelledby="confirmDeleteClientLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteClientLabel">¿Confirmar eliminación?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este cliente?
                    <input type="hidden" id="deleteClientId" name="id" />
                    <input type="hidden" name="pageNumber" value="@Model.Page" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const clientModal = document.getElementById('confirmDeleteClientModal');
    clientModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const clientId = button.getAttribute('data-client-id');
      document.getElementById('deleteClientId').value = clientId;
    });
</script>
