@page
@model LibraryWeb.Pages.Sales.CreateModel
@{
    ViewData["Title"] = "Registrar Venta";
    var clientIdValue = Model.SelectedClientId.HasValue ? Model.SelectedClientId.Value.ToString() : "";
}

<form method="post" id="mainSaleForm">
    @Html.AntiForgeryToken()
    <!-- Hidden explícito para SelectedClientId -->
    <input type="hidden" name="SelectedClientId" id="hiddenSelectedClientId" value="@clientIdValue" />

    @for (var i = 0; i < Model.Items.Count; i++)
    {
        <input type="hidden" name="Items[@i].ProductId" value="@Model.Items[i].ProductId" />
        <input type="hidden" name="Items[@i].Description" value="@Model.Items[i].Description" />
        <input type="hidden" name="Items[@i].Quantity" value="@Model.Items[i].Quantity" />
        <input type="hidden" name="Items[@i].UnitPrice" value="@Model.Items[i].UnitPrice" />
    }

    <div class="card shadow-custom">
        <div class="card-header card-header-blue d-flex align-items-center justify-content-between">
            <h5 class="mb-0 text-white"><i class="fas fa-file-invoice-dollar me-2"></i>Registro de Venta</h5>
            <div class="text-white small">Fecha: @Model.Today.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="card-body bg-white">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- CLIENTE -->
            <div class="row g-3 mb-4">
                <div class="col-md-5">
                    <label class="form-label fw-bold">CI/NIT Cliente</label>
                    <div class="input-group">
                        <input type="text" 
                               name="ClientSearch"
                               id="inputClientSearch" 
                               class="form-control" 
                               placeholder="Buscar por CI/NIT..." 
                               value="@(Model.SelectedClient != null ? Model.SelectedClient.Ci : Model.ClientSearch)"
                               autocomplete="off"
                               @(Model.SelectedClient != null ? "readonly" : "") />
                        @if (Model.SelectedClient == null)
                        {
                            <button type="submit" formaction="?handler=SearchClient" class="btn btn-outline-primary" title="Buscar">
                                <i class="fas fa-search"></i>
                            </button>
                        }
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#clientModal" title="Nuevo cliente">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    <div id="clientSuggestionsList" class="list-group position-absolute shadow" style="z-index:1050; max-height:250px; overflow-y:auto;"></div>
                </div>
                <div class="col-md-7">
                    <label class="form-label fw-bold">Cliente Seleccionado</label>
                    <div class="d-flex gap-2 align-items-center">
                        @if (Model.SelectedClient != null)
                        {
                            <div class="alert alert-success py-2 px-3 mb-0 flex-grow-1">
                                <i class="fas fa-user-check me-2"></i>
                                <strong>Titular:</strong> @Model.SelectedClient.LastName @Model.SelectedClient.FirstName
                                <span class="badge bg-secondary ms-2">@Model.SelectedClient.Ci</span>
                            </div>
                            <button type="submit" formaction="?handler=ClearClient" class="btn btn-outline-danger">
                                <i class="fas fa-times me-1"></i>Quitar
                            </button>
                        }
                        else
                        {
                            <div class="form-control bg-light text-muted">
                                <i class="fas fa-user-slash me-1"></i>No seleccionado
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Resultados de búsqueda de cliente (solo mostrar si NO hay cliente seleccionado) -->
            @if (Model.SelectedClient == null)
            {
                @if (Model.ClientSuggestions?.Count > 0)
                {
                    <div class="table-responsive mb-4">
                        <table class="table table-striped table-hover table-bordered align-middle">
                            <thead>
                                <tr>
                                    <th class="th-blue">CI/NIT</th>
                                    <th class="th-blue">Nombre Completo</th>
                                    <th class="th-blue text-center" style="width:180px">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model.ClientSuggestions)
                                {
                                    <tr>
                                        <td><strong>@c.Ci</strong></td>
                                        <td>@c.LastName @c.FirstName</td>
                                        <td class="text-center">
                                            <button type="submit" formaction="?handler=PickClient&id=@c.Id" class="btn btn-success btn-sm">
                                                <i class="fas fa-check me-1"></i>Seleccionar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else if (!string.IsNullOrWhiteSpace(Model.ClientSearch))
                {
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-1"></i>No se encontró cliente con CI/NIT "<strong>@Model.ClientSearch</strong>". 
                        Puedes crear uno nuevo con el botón <strong>+</strong>.
                    </div>
                }
            }

            <!-- PRODUCTO -->
            <div class="mb-4">
                <label class="form-label fw-bold">Producto a Agregar</label>
                <div class="input-group">
                    <input type="text"
                           name="ProductSearch"
                           id="inputProductSearch" 
                           class="form-control" 
                           placeholder="Buscar producto por nombre..." 
                           value="@Model.ProductSearch"
                           autocomplete="off" />
                    <button type="submit" formaction="?handler=SearchProduct" class="btn btn-outline-primary" title="Buscar">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <div id="productSuggestionsList" class="list-group position-absolute shadow" style="z-index:1050; max-height:300px; overflow-y:auto;"></div>
            </div>

            <!-- Resultados de búsqueda de productos -->
            @if (Model.ProductSuggestions?.Count > 0)
            {
                <div class="table-responsive mb-4">
                    <table class="table table-striped table-hover table-bordered align-middle">
                        <thead>
                            <tr>
                                <th class="th-blue">Producto</th>
                                <th class="th-blue text-end" style="width:140px">Precio</th>
                                <th class="th-blue text-center" style="width:140px">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.ProductSuggestions)
                            {
                                <tr>
                                    <td>@p.Name</td>
                                    <td class="text-end">Bs @p.Price.ToString("N2")</td>
                                    <td class="text-center">
                                        <button type="submit" formaction="?handler=AddItem&id=@p.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-plus me-1"></i>Agregar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <!-- DETALLE DE LA VENTA -->
            <h6 class="mt-4 mb-3 fw-bold"><i class="fas fa-shopping-cart me-1"></i>Detalle de la Venta</h6>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead>
                        <tr>
                            <th class="th-blue" style="width:160px">Cantidad</th>
                            <th class="th-blue">Descripción</th>
                            <th class="th-blue text-end" style="width:140px">P. Unitario</th>
                            <th class="th-blue text-end" style="width:140px">Importe</th>
                            <th class="th-blue text-center" style="width:100px">Quitar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Count == 0)
                        {
                            <tr><td colspan="5" class="text-center text-muted py-4">Sin productos agregados</td></tr>
                        }
                        else
                        {
                            @foreach (var it in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="input-group input-group-sm" style="width:130px">
                                            <button type="submit" formaction="?handler=Dec&id=@it.ProductId" class="btn btn-outline-secondary">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="text" class="form-control text-center" value="@it.Quantity" readonly />
                                            <button type="submit" formaction="?handler=Inc&id=@it.ProductId" class="btn btn-outline-secondary">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>@it.Description</td>
                                    <td class="text-end">Bs @it.UnitPrice.ToString("N2")</td>
                                    <td class="text-end fw-bold">Bs @it.Total.ToString("N2")</td>
                                    <td class="text-center">
                                        <button type="submit" formaction="?handler=Remove&id=@it.ProductId" class="btn btn-danger btn-sm" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end border-top pt-3">
                <h5 class="mb-0">Total: <span class="text-primary fw-bold">Bs @Model.Total.ToString("N2")</span></h5>
            </div>

            <div class="d-flex justify-content-end mt-4 gap-2">
                <button type="submit" formaction="?handler=Save" class="btn btn-success btn-lg">
                    <i class="fas fa-save me-1"></i>Guardar Venta
                </button>
                <a asp-page="/Sales/Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times me-1"></i>Cancelar
                </a>
            </div>
        </div>
    </div>
</form>

<!-- Modal Nuevo Cliente -->
<div class="modal fade" id="clientModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form method="post" asp-page-handler="CreateClient">
        @Html.AntiForgeryToken()
        <input type="hidden" name="SelectedClientId" value="@clientIdValue" />
        @for (var i = 0; i < Model.Items.Count; i++)
        {
            <input type="hidden" name="Items[@i].ProductId" value="@Model.Items[i].ProductId" />
            <input type="hidden" name="Items[@i].Description" value="@Model.Items[i].Description" />
            <input type="hidden" name="Items[@i].Quantity" value="@Model.Items[i].Quantity" />
            <input type="hidden" name="Items[@i].UnitPrice" value="@Model.Items[i].UnitPrice" />
        }
        <div class="modal-header card-header-blue">
          <h5 class="modal-title text-white"><i class="fas fa-user-plus me-2"></i>Nuevo Cliente</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Nombre *</label>
                    <input asp-for="NewClient.FirstName" class="form-control" />
                    <span class="text-danger small" asp-validation-for="NewClient.FirstName"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Apellido *</label>
                    <input asp-for="NewClient.LastName" class="form-control" />
                    <span class="text-danger small" asp-validation-for="NewClient.LastName"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">CI/NIT *</label>
                    <input asp-for="NewClient.Ci" class="form-control" />
                    <span class="text-danger small" asp-validation-for="NewClient.Ci"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Correo *</label>
                    <input asp-for="NewClient.Email" class="form-control" type="email" />
                    <span class="text-danger small" asp-validation-for="NewClient.Email"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Teléfono *</label>
                    <input asp-for="NewClient.Phone" class="form-control" maxlength="8" />
                    <span class="text-danger small" asp-validation-for="NewClient.Phone"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Dirección *</label>
                    <input asp-for="NewClient.Address" class="form-control" />
                    <span class="text-danger small" asp-validation-for="NewClient.Address"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="Shared/_ValidationScriptsPartial" />
    <script>
    (function() {
        var form = document.getElementById('mainSaleForm');
        var inputClient = document.getElementById('inputClientSearch');
        var inputProduct = document.getElementById('inputProductSearch');
        var clientList = document.getElementById('clientSuggestionsList');
        var productList = document.getElementById('productSuggestionsList');
        var hiddenClientId = document.getElementById('hiddenSelectedClientId');

        // Enter en búsqueda de producto dispara SearchProduct
        if (inputProduct) {
            inputProduct.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    form.action = '?handler=SearchProduct';
                    form.submit();
                }
            });
        }

        // Enter en búsqueda de cliente dispara SearchClient (solo si no hay cliente seleccionado)
        if (inputClient && !inputClient.hasAttribute('readonly')) {
            inputClient.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    form.action = '?handler=SearchClient';
                    form.submit();
                }
            });
        }

        // CLIENTE: Autocompletar dinámico (solo si no hay cliente seleccionado)
        var clientTimer;
        if (inputClient && clientList && !inputClient.hasAttribute('readonly')) {
            inputClient.addEventListener('input', function() {
                clearTimeout(clientTimer);
                var term = (inputClient.value || '').trim();
                if (term.length < 2) { clientList.innerHTML = ''; return; }
                clientTimer = setTimeout(function() {
                    fetch(window.location.pathname + '?handler=ClientSuggestions&term=' + encodeURIComponent(term))
                        .then(function(r) { return r.ok ? r.json() : []; })
                        .then(function(items) {
                            clientList.innerHTML = '';
                            if (!items || items.length === 0) return;
                            items.forEach(function(it) {
                                var btn = document.createElement('button');
                                btn.type = 'button';
                                btn.className = 'list-group-item list-group-item-action py-2';
                                btn.innerHTML = '<strong>' + it.ci + '</strong> - ' + it.name;
                                btn.addEventListener('click', function() {
                                    inputClient.value = it.ci;
                                    if (hiddenClientId) hiddenClientId.value = it.id;
                                    clientList.innerHTML = '';
                                    form.action = '?handler=PickClient&id=' + it.id;
                                    form.submit();
                                });
                                clientList.appendChild(btn);
                            });
                        })
                        .catch(function() { clientList.innerHTML = ''; });
                }, 200);
            });
            document.addEventListener('click', function(e) {
                if (e.target !== inputClient && !clientList.contains(e.target)) clientList.innerHTML = '';
            });
        }

        // PRODUCTO: Autocompletar dinámico
        var productTimer;
        if (inputProduct && productList) {
            inputProduct.addEventListener('input', function() {
                clearTimeout(productTimer);
                var term = (inputProduct.value || '').trim();
                if (term.length < 2) { productList.innerHTML = ''; return; }
                productTimer = setTimeout(function() {
                    fetch(window.location.pathname + '?handler=ProductSuggestions&term=' + encodeURIComponent(term))
                        .then(function(r) { return r.ok ? r.json() : []; })
                        .then(function(items) {
                            productList.innerHTML = '';
                            if (!items || items.length === 0) return;
                            items.forEach(function(it) {
                                var btn = document.createElement('button');
                                btn.type = 'button';
                                btn.className = 'list-group-item list-group-item-action py-2 d-flex justify-content-between align-items-center';
                                btn.innerHTML = '<span>' + it.name + '</span><span class="badge bg-primary">Bs ' + it.price.toFixed(2) + '</span>';
                                btn.addEventListener('click', function() {
                                    productList.innerHTML = '';
                                    form.action = '?handler=AddItem&id=' + it.id;
                                    form.submit();
                                });
                                productList.appendChild(btn);
                            });
                        })
                        .catch(function() { productList.innerHTML = ''; });
                }, 200);
            });
            document.addEventListener('click', function(e) {
                if (e.target !== inputProduct && !productList.contains(e.target)) productList.innerHTML = '';
            });
        }
    })();
    </script>

    @if (TempData["OpenClientModal"] as bool? == true)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var m = bootstrap.Modal.getOrCreateInstance(document.getElementById('clientModal'));
                if (m) m.show();
            });
        </script>
    }
}
