@page
@model LibraryWeb.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Usuarios";
    int startNumber = (Model.Page - 1) * Model.PageSize;
    string TranslateRole(string? r) => (r ?? string.Empty).ToLowerInvariant() switch
    {
        "admin" => "Administrador",
        "employee" => "Empleado",
        _ => r ?? string.Empty
    };
}
<div class="card shadow-custom">
    <div class="card-header card-header-blue d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h5 class="mb-0 text-white"><i class="fas fa-users me-2"></i>Usuarios</h5>
        <div class="d-flex align-items-center gap-2">
            <form method="get" class="d-flex align-items-center gap-2">
                <label class="form-label mb-0 small text-white">Mostrar</label>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 70px;">
                        @Model.PageSize
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                        @foreach (var size in new[] { 10, 20, 50, 100 })
                        {
                            <li>
                                <button type="submit" name="pageSize" value="@size" class="dropdown-item @(Model.PageSize == size ? "active" : "")">
                                    @size registros
                                </button>
                            </li>
                        }
                    </ul>
                </div>
                <input type="hidden" name="pageNumber" value="1" />
            </form>
            <a asp-page="Create" class="btn btn-primary btn-sm"><i class="fas fa-user-plus me-1"></i>Añadir Usuario</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th class="th-blue">N°</th>
                        <th class="th-blue">Nombre de Usuario</th>
                        <th class="th-blue">Correo Electrónico</th>
                        <th class="th-blue">Roles</th>
                        <th class="th-blue text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@(startNumber + (++i))</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles != null && user.Roles.Count > 0)
                                {
                                    foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@TranslateRole(role)</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Sin rol</span>
                                }
                            </td>
                            <td class="text-center table-actions">
                                <button type="button" class="btn btn-danger btn-sm btn-icon" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-user-id="@user.Id">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Users.Any())
        {
            <div class="alert alert-info mb-0">No tienes usuarios registrados.</div>
        }

        @if (Model.TotalPages > 1)
        {
            <nav class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted small">
                    Página @Model.Page de @Model.TotalPages
                </div>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link rounded-start-pill" asp-page="Index" asp-route-pageNumber="1" asp-route-pageSize="@Model.PageSize" title="Primera">
                            <i class="fas fa-angles-left"></i>
                        </a>
                    </li>
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.Page - 1)" asp-route-pageSize="@Model.PageSize" title="Anterior">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>
                    @{
                        int start = Math.Max(1, Model.Page - 2);
                        int end = Math.Min(Model.TotalPages, Model.Page + 2);
                        if (start > 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }
                    @for (int p = start; p <= end; p++)
                    {
                        <li class="page-item @(p == Model.Page ? "active" : "")">
                            <a class="page-link" asp-page="Index" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                        </li>
                    }
                    @if (end < Model.TotalPages)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@(Model.Page + 1)" asp-route-pageSize="@Model.PageSize" title="Siguiente">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link rounded-end-pill" asp-page="Index" asp-route-pageNumber="@Model.TotalPages" asp-route-pageSize="@Model.PageSize" title="Última">
                            <i class="fas fa-angles-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteLabel">¿Confirmar eliminación?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este usuario?
                    <input type="hidden" id="deleteUserId" name="id" />
                    <input type="hidden" name="pageNumber" value="@Model.Page" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const modal = document.getElementById('confirmDeleteModal');
    modal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const userId = button.getAttribute('data-user-id');
      document.getElementById('deleteUserId').value = userId;
    });
</script>
