@page
@model LibraryWeb.Pages.Distributors.IndexModel
@{
    ViewData["Title"] = "Distribuidores";
    int startNumber = (Model.Page - 1) * Model.PageSize;
}

<div class="card shadow-custom">
    <div class="card-header card-header-blue d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h5 class="mb-0 text-white"><i class="fas fa-truck me-2"></i>Distribuidores</h5>
        <div class="d-flex align-items-center gap-2">
            <form method="get" class="d-flex align-items-center gap-2">
                <label class="form-label mb-0 small text-white">Mostrar</label>
                <select name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()">
                    @foreach (var size in new[] { 10, 20, 50, 100 })
                    {
                        <option value="@size" selected="@(Model.PageSize == size)">@size</option>
                    }
                </select>
                <input type="hidden" name="page" value="1" />
            </form>
            @if (User.IsInRole("Admin"))
            {
                <a asp-page="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus me-1"></i>Añadir Distribuidor</a>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th class="th-blue">N°</th>
                        <th class="th-blue">Nombre</th>
                        <th class="th-blue">Correo electrónico</th>
                        <th class="th-blue">Celular</th>
                        <th class="th-blue">Dirección</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th class="th-blue text-center">Acciones</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var distributor in Model.Distributors)
                    {
                        <tr>
                            <td>@(startNumber + (++i))</td>
                            <td>@distributor.Name </td>
                            <td>@distributor.ContactEmail</td>
                            <td>@distributor.Phone</td>
                            <td>@distributor.Address</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td class="text-center table-actions">
                                    <form method="post" asp-page-handler="Edit" asp-antiforgery="true" class="d-inline">
                                        <input type="hidden" name="id" value="@distributor.Id" />
                                        <input type="hidden" name="page" value="@Model.Page" />
                                        <input type="hidden" name="pageSize" value="@Model.PageSize" />
                                        <button type="submit" class="btn btn-warning btn-sm btn-icon"><i class="fas fa-edit"></i> Editar</button>
                                    </form>
                                    <button type="button" class="btn btn-danger btn-sm btn-icon" data-bs-toggle="modal" data-bs-target="#confirmDeleteDistributorModal" data-distributor-id="@distributor.Id">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Distributors.Any())
        {
            <div class="alert alert-info mb-0">No tienes distribuidores registrados.</div>
        }

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(Model.Page == 1 ? "disabled" : null)">
                        <a class="page-link" asp-page="Index" asp-route-page="@(Model.Page - 1)" asp-route-pageSize="@Model.PageSize">«</a>
                    </li>
                    @for (int p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.Page ? "active" : null)">
                            <a class="page-link" asp-page="Index" asp-route-page="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                        </li>
                    }
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : null)">
                        <a class="page-link" asp-page="Index" asp-route-page="@(Model.Page + 1)" asp-route-pageSize="@Model.PageSize">»</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<div class="modal fade" id="confirmDeleteDistributorModal" tabindex="-1" aria-labelledby="confirmDeleteDistributorLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteDistributorLabel">¿Confirmar eliminación?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este distribuidor?
                    <input type="hidden" id="deleteDistributorId" name="id" />
                    <input type="hidden" name="page" value="@Model.Page" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const distributorModal = document.getElementById('confirmDeleteDistributorModal');
    distributorModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const distributorId = button.getAttribute('data-distributor-id');
      document.getElementById('deleteDistributorId').value = distributorId;
    });
</script>
